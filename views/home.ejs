<div id="search-bar">
    <input type="text" placeholder="Search for a study set...."><br>
</div>
<div id="results">
    <% sets.forEach(set => { %>
        <div class="search-result">
            <a href="/set/<%= set.uri %>"><%= set.name %></a>
        </div>
    <% }); %>
</div>
<script>
    document.querySelector("#search-bar").addEventListener('focus', _ => {
        document.querySelector("#results").style.display = "block";
    });
    document.querySelector("#search-bar").addEventListener('unfocus', _ => {
        document.querySelector("#results").style.display = "none";
    });

    document.querySelector("#search-bar").addEventListener('keyup', _ => {
       let query = document.querySelector("#search-bar input").value.toLowerCase().trim();
       Array.from(document.querySelectorAll("#results .search-result")).forEach(elmt => {
          if (!elmt.querySelector("a").innerHTML.trim().toLowerCase().includes(query)) {
            elmt.style.display = 'none';
          } else {
            elmt.style.display = 'block';
          }
       });
    })
</script><br>
<hr />
